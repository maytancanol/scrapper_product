<p id="notice"><%= notice %></p>
<%= button_to "Run Scrapping Products", scrapper_products_path if ScrapperProduct.status != 'Running' %>
<br />
<%= 'Scrapping is <b>Running</b>, please wait till completed'.html_safe  if ScrapperProduct.status == 'Running' %>
<h1>Products, total <%= Product.count %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Extra information</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= product.extra_information %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

